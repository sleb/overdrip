rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Registration codes: readable by authenticated users, only Cloud Functions can write
    match /registration-codes/{code} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can create/delete registration codes
    }

    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Users can manage their own device registrations
      match /devices/{deviceId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Devices can write their own data
    match /devices/{deviceId} {
      allow read, write: if request.auth.uid == deviceId; // Anonymous auth UID

      // Users can read devices they've registered
      allow read: if exists(/databases/$(database)/documents/users/$(request.auth.uid)/devices/$(deviceId));

      // Users can write to config for devices they own
      match /config {
        allow write: if exists(/databases/$(database)/documents/users/$(request.auth.uid)/devices/$(deviceId));
      }

      match /metrics/{metricId} {
        allow read: if exists(/databases/$(database)/documents/users/$(request.auth.uid)/devices/$(deviceId));
      }

      match /events/{eventId} {
        allow read: if exists(/databases/$(database)/documents/users/$(request.auth.uid)/devices/$(deviceId));
      }
    }
  }
}
