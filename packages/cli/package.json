{
  "name": "@overdrip/cli",
  "version": "0.1.0",
  "description": "Overdrip CLI - IoT plant watering system",
  "dependencies": {
    "@overdrip/core": "workspace:*",
    "clerc": "^0.44.0",
    "ink": "^6.4.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react-devtools-core": "^7.0.1"
  },
  "bin": {
    "overdrip": "./src/cli.ts"
  },
  "type": "module",
  "scripts": {
    "dev": "cd ../.. && bun packages/cli/src/cli.ts",
    "build": "cd ../.. && bun packages/cli/build.ts build",
    "build:release": "cd ../.. && bun packages/cli/build.ts build:release",
    "clean": "cd ../.. && bun packages/cli/build.ts clean",
    "test": "cd ../.. && bun packages/cli/test-oauth.ts",
    "test:real-oauth": "cd ../.. && bun packages/cli/test-real-oauth.ts"
  }
}
