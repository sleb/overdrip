{
  "name": "@overdrip/functions",
  "version": "0.0.1",
  "private": true,
  "description": "Firebase Cloud Functions for Overdrip",
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir lib --target node --format cjs --external firebase-admin --external firebase-functions",
    "typecheck": "bun run build",
    "serve": "bun run build && firebase emulators:start --only functions",
    "shell": "bun run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  }
}